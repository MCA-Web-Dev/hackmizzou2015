<script>
  $(document).ready(function(){
    $('.scrollspy').scrollSpy();
    $('#logo').hide();
    $('#logo').fadeIn(3000);
  });
</script>
<script>
  $('#submission-form').submit(function(){
    $.post('/people/submit', $('#submission-form').serialize(), function(data){
      if (data.id != null){
        sweetAlert("Awesome!", "We'll keep you updated on all things HackMizzou. Stay tuned!", "success");
      }
      else {
        sweetAlert("Uh oh", "You're missing some form input :(", "error");
      }
    });
    return false;
  })


</script>
